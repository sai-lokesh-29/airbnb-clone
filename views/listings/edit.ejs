<% layout('./layout/boilerplate') -%>

  <head>
    <title>update Listing</title>
  </head>

  <body>
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <h1>update Listing</h1><br>
        <form action="/listings/<%=listing._id%>/update" method="post" enctype="multipart/form-data"
          class="needs-validation" novalidate>
          <div>
            <label for="title" class="form-label">Title:</label>
            <input type="text" class="form-control" id="title" placeholder="villa" name="title"
              value="<%=listing.title%>" required>
            <div class="invalid-feedback">
              Please choose a title.
            </div>
          </div>
          <br>
          <div>
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="description" class="form-control" placeholder="sweat place"
              required><%=listing.description%></textarea>
            <div class="invalid-feedback">
              Please choose a description.
            </div>
          </div>
          <br>
          <div>
            <label for="img">Original image:</label><br>
            <img src="<%=listing.image.url%>" id="img" alt="img" width="100px" height="100px"><br>
            <label for="image" class="form-label">Update image:</label>
            <input type="file" id="image" class="form-control" name="image" value="<%=listing.image.url%>">
          </div>
          <br>
          <div class="row">
            <div class="col-md-4">
              <label for="price" class="form-label">Price:</label>
              <input type="number" id="price" class="form-control" placeholder="5000" name="price"
                value="<%=listing.price%>" required>
              <div class="invalid-feedback">
                Please choose a price.
              </div>
            </div>
            <div class="col-md-8">
              <label for="country" class="form-label">Country:</label>
              <input type="text" id="country" class="form-control" placeholder="India" name="country"
                value="<%=listing.country%>" required>
              <div class="invalid-feedback">
                Please choose a country.
              </div>
            </div>
          </div>
          <div>
            <label for="location" class="form-label">Location:</label>
            <input type="text" id="location" class="form-control" placeholder="Goa" name="location"
              value="<%=listing.location%>" required>
            <div class="invalid-feedback">
              Please choose a location.
            </div>
          </div>
          <br>
          <input type="submit" class="btn btn-dark" value="Update">
        </form>
      </div>
    </div>
    <br>
  </body>