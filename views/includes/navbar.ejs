<style>
  .btn-search:hover {
    border: 2px solid red;
    background-color: white;
    color: red;
  }

  .inp-search {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    text-align: center;
    font-size: 0.8rem;
  }

  .btn-search {
    width: 150px;
    padding: 2px;
    border-radius: 25px;
  }

  .btn-search i {
    margin-right: 5px;
  }
</style>

<nav class="navbar sticky-top navbar-expand-md bg-body-light border-bottom">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <form class="d-flex ms-auto" role="search" action="/listings" method="get">
        <input class="form-control me-2 inp-search" type="text" name="search" placeholder="Search Destinations"
          list="countryOptions">
        <datalist id="countryOptions">
          <option value="India">
          <option value="Nepal">
          <option value="United States">
          <option value="France">
          <option value="Japan">
          <option value="Australia">
        </datalist>
        <button class="btn btn-danger btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i> Search</button>
      </form>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add new listings</a>
        <%if(!currUser){%>
          <a class="nav-link" href="/signup"><b>signup</b></a>
          <a class="nav-link" href="/login"><b>login</b></a>
          <%}else{%>
            <a class="nav-link" href="/logout"><b>logout</b></a>
            <%}%>
      </div>
    </div>
  </div>
</nav>